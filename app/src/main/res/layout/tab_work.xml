<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#212121"
    android:id="@+id/tab_work_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/tab_search_title"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="48dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:layout_centerInParent="true"
            android:text="작품 정보"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/tab_work_img"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        />

    <TextView
        android:id="@+id/tab_work_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="23dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="12323232323"
        android:textColor="#ffffff"
        />
    <View
        android:id="@+id/tab_work_underline"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_marginLeft="23dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tab_work_how"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="11111"
            />

        <TextView
            android:id="@+id/tab_work_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="11111"
            />

        <TextView
            android:id="@+id/tab_work_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="11111"
            />

        <TextView
            android:id="@+id/tab_work_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="11111"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/tab_work_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/move_to_collection_off"
        />
    </RelativeLayout>

    </LinearLayout>


</FrameLayout>